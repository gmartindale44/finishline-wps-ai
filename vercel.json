{
  "functions": {
    "api/**/*.py": {
      "maxDuration": 60,
      "memory": 1536
    }
  },
  "routes": [
    { "src": "^/api/(.*)$", "dest": "/api/$1" },
    { "src": "^/(favicon\\.ico|robots\\.txt)$", "dest": "/public/$1" },
    { "src": "^/(.*\\.(css|js|png|jpg|jpeg|gif|svg|webp|woff2?|ttf))$", "dest": "/public/$1" },
    { "src": "^/(.*)$", "dest": "/public/index.html" }
  ]
}
