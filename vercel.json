{
  "functions": {
    "api/**/*.py": {
      "maxDuration": 60,
      "memory": 1536
    }
  },
  "routes": [
    { "src": "^/api/(.*)$", "dest": "/api/$1" },
    { "src": "^/(favicon\\.ico|robots\\.txt)$", "dest": "/public/$1" },
    { "src": "^/(.*)$", "dest": "/public/$1", "check": true },
    { "src": "^/(?!api/).*", "dest": "/public/index.html" }
  ]
}
