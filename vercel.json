{
  "functions": {
    "api/**/*.py": {
      "maxDuration": 60,
      "memory": 1536
    }
  },
  "rewrites": [
    { "source": "/api/:path*", "destination": "/api/http.py" },
    { "source": "/:file(.*\\.(css|js|png|jpg|jpeg|gif|svg|webp|woff2?|ttf))", "destination": "/public/:file" },
    { "source": "/:path*", "destination": "/public/index.html" }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Content-Type", "value": "application/json; charset=utf-8" }
      ]
    }
  ]
}
