{
  "version": 2,
  "functions": {
    "api/**/*.py": { 
      "maxDuration": 60,
      "memory": 1536
    }
  },
  "routes": [
    { "src": "^/api/finishline/.*", "dest": "/api/main.py" },
    { "src": "^/$", "dest": "/apps/web/index.html" },
    { "src": "^/index.html$", "dest": "/apps/web/index.html" },
    { "src": "/(.*)", "dest": "/apps/web/$1" }
  ]
}