{
  "functions": {
    "api/**/*.py": {
      "maxDuration": 60,
      "memory": 1536
    }
  },
  "routes": [
    { "src": "^/api/healthz$", "dest": "/api/main.py" },
    { "src": "^/api/finishline/.*", "dest": "/api/main.py" },
    { "src": "^/api/.*", "dest": "/api/http.py" },
    { "src": "^/(favicon\\.ico|robots\\.txt)$", "dest": "/public/$1" },
    { "src": "^/(.*)\\.(css|js|png|jpg|jpeg|gif|svg|woff|woff2|ttf|ico)$", "dest": "/public/$1" },
    { "src": "^/.*", "dest": "/public/index.html" }
  ]
}
