{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "FinishLine: Run Backend (Uvicorn)",
      "type": "shell",
      "command": "python -m uvicorn apps.api.api_main:app --reload --port 8000",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },
    {
      "label": "FinishLine: Run Frontend (HTTP Server)",
      "type": "shell",
      "command": "python -m http.server 3000",
      "options": {
        "cwd": "${workspaceFolder}/apps/web"
      },
      "problemMatcher": []
    },
    {
      "label": "FinishLine: Run BOTH (Windows)",
      "type": "shell",
      "command": "powershell -ExecutionPolicy Bypass -File ./scripts/dev.ps1",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "FinishLine: Run BOTH (macOS/Linux)",
      "type": "shell",
      "command": "bash ./scripts/dev.sh",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    }
  ]
}
